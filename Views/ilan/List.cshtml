@model IEnumerable<Emlak_Sitesi_1.Models.ilan>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta charset="utf-8" />
<h2>@Session["username"].ToString()  tarafından verilen ilanlar</h2>


@foreach (var item in Model)
{

    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">
                <div class="panel panel-info">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-3 col-lg-3 " align="center"> 
                            
                            <img alt="User Pic" src="~/İmages/" class="img-circle img-responsive">
                            @{

                                Html.RenderAction("List", "Resim", new { id = item.ilanID });

                            }
                            
                             </div>
                            <div class=" col-md-9 col-lg-9 ">
                                <table class="table table-user-information">
                                    <tbody>
                                        <tr>
                                            <td>İlan Veren:</td>
                                            <td>@item.kullanici.kullaniciAdSoyad</td>
                                        </tr>
                                        <tr>
                                            <td>İlan ID:</td>
                                            <td>@item.ilanID</td>
                                        </tr>

                                        <tr>
                                            <td>Fiyat:</td>
                                            <td>@item.ilanFiyat</td>
                                        </tr>
                                        <tr>
                                            <td>Tarih:</td>
                                            <td>@item.tarih</td>
                                        </tr>
                                        <tr>
                                            <td>Kategori:</td>
                                            <td>@item.kategori.kategoriAd</td>
                                        </tr>
                                        <tr>
                                            <td>Durum:</td>
                                            <td>@item.islem.islemAd</td>
                                        </tr>
                                        <tr>
                                            <td>Adres:</td>
                                            <td>@item.ilanAdres</td>
                                        </tr>
                                        <tr>
                                            <td>Açıklama:</td>
                                            <td>@item.ilanAciklama</td>
                                        </tr>
                                        <tr>
                                            <td>Sil:</td>
                                            <td>@Html.ActionLink("Sil", "Delete", new { id = item.ilanID })</td>
                                        </tr>
                                        <tr>
                                            <td>Düzenle:</td>
                                            <td>@Html.ActionLink("Düzenle", "Edit", new { id = item.ilanID })</td>
                                        </tr>
                                        <tr>
                                            <td>Detay:</td>
                                            <td>@Html.ActionLink("Detay", "Details", new { id = item.ilanID })</td>
                                        </tr>
                                        <tr>
                                            <td>Resim Ekle:</td>
                                            <td>
                                                <a href="/Resim/Create/@item.ilanID">Ekle</a>                                             
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
