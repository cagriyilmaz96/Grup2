@model Emlak_Sitesi_1.Models.Resim

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>İlana Resim Ekle</h2>

@using (Html.BeginForm("Create", "Resim",FormMethod.Post,new {enctype="multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">           
            <div class="col-md-10">
                <input type="file" name="yol" id="yol" value="Dosya Seç" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Resmi Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}

